<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/moviePosterImageView"
        android:layout_width="@dimen/image_side_length"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/paddingleftright"
        android:layout_marginEnd="@dimen/paddingleftright"
        android:contentDescription="@string/poster_movie_contentDescription"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/action" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_weight="1"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/originalMovieTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginStart="@dimen/paddingleftright"
            android:layout_marginEnd="@dimen/paddingleftright"
            android:text="@string/movietitle" />

        <TextView
            android:id="@+id/movieTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_marginStart="@dimen/paddingleftright"
            android:layout_marginEnd="@dimen/paddingleftright"
            android:text="@string/original_title" />


        <TextView
            android:id="@+id/releaseDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_marginStart="@dimen/paddingleftright"
            android:layout_marginEnd="@dimen/paddingleftright"
            android:text="@string/release_date" />


    </GridLayout>


</LinearLayout>