<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/backdropImageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/backdrop_movie_ContentDescription"
        tools:srcCompat="@tools:sample/backgrounds/scenic[1]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/posterImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/paddingleftright"
            android:contentDescription="@string/poster_movie_contentDescription"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/action" />

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/paddingleftright"
            android:layout_weight="1"
            android:columnCount="1"
            android:orientation="vertical"
            android:rowCount="4"
            android:useDefaultMargins="true">


            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/paddingleftright"
                android:text="@string/movietitle" />

            <TextView
                android:id="@+id/originalTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/paddingleftright"
                android:layout_marginEnd="@dimen/paddingleftright"
                android:text="@string/original_title" />

            <TextView
                android:id="@+id/releaseDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/paddingleftright"
                android:layout_marginEnd="@dimen/paddingleftright"
                android:text="@string/release_date" />


            <TextView
                android:id="@+id/runtimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_columnWeight="1"
                android:layout_marginStart="@dimen/paddingleftright"
                android:layout_marginEnd="@dimen/paddingleftright"
                android:text="@string/runtime" />

            <TextView
                android:id="@+id/movieDetalheId"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>
        </GridLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/overviewtitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingleftright"
        android:layout_marginTop="@dimen/paddingtopbotton"
        android:layout_marginEnd="@dimen/paddingleftright"
        android:text="@string/overviewtitle" />
    <TextView
        android:id="@+id/overviewTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/paddingleftright"
        android:layout_marginTop="@dimen/paddingtopbotton"
        android:layout_marginEnd="@dimen/paddingleftright"
        android:text="@string/overview" />

</LinearLayout>